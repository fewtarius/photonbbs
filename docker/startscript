#!/bin/bash

###
### Set up the PhotonBBS data files to be persistent.
###

if [ ! -e '/appdata/.installed' ]
then
  rsync -av /opt/photonbbs/data/* /appdata
  touch /appdata/.installed
fi

chown -R bbs:bbs /appdata

###
### Run xinetd in a loop.
###

while [ true ]
do
  xinetd -dontfork
  sleep 1
done
