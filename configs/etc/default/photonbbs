###
### Photon BBS Configuration File
###
### This configuration file will override defaults found in modules/pb-defaults
### allowing you to customize your system without editing the scripts.
###
### Format:
###
###   KEY="VALUE"
###

home="/opt/photonbbs";          ## Main BBS Path (many dependencies on this)
bin="/bin";                     ## BBS Bin path (Future use)
data="/data";                   ## BBS Data path
messages="/data/messages";      ## Pager / Teleconference message path
nodes="/data/nodes";            ## Node information path
text="/data/text";              ## Ansi & BBS text files
themes="/data/themes";          ## BBS Skin file
users="/data/users";            ## User information path
doorexec="/doorexec";           ## Script bin -> Path to door scripts
doors="/opt/photonbbs/doors";   ## Node info -> Drop files etc
help="?";                       ## Key to press for help
authretries="3";                ## Number of password retries
passlength="30";                ## Password length
passchr="*";                    ## Passchr to echo at password prompt
promptchr=":";                  ## Conference prompt character
theme="photon";                 ## Default Skin
public="1";                     ## Public(1)/Private(0) BBS
systemcolor="@WHT";             ## System text color
usercolor="@BWH";               ## User notification color
inputcolor="@WHT";              ## User input color
themecolor="@BBL";              ## Prompt text color
promptcolor="@WHT";             ## Prompt text color
errorcolor="@RED";              ## Color for error messages
datacolor="@BWH";               ## Generated data color
linecolor="@BLU";               ## Line color (Oneliners, etc)
usefullname="1";                ## Force Full Name Yes(1) / No (0)
usephonenum="0";                ## Force User's phone number Yes(1) / No (0)
systemname="Photon BBS";        ## BBS's Name
clearlogin="0";                 ## Clear screen before displaying header
headers="1";                    ## Display BBS name on connect
sysop="SysOp";                  ## Sysop's Name
host="";                        ## Override SysInfo Hostname with cname
oneliners="1";                  ## Enable Oneliners
bulletins="1";                  ## Enable System Bulletins
onelinerrows="15";              ## Number of oneliners to keep
lastcallers="25";               ## Keep this many last callers in the list
lastcallenable="1";             ## Last Callers Enable (1) / Disable (0)
unixuser="nobody";              ## User account the application runs as
port="23";                      ## Port for the BBS daemon
sec_user="10";                  ## Default Sec level for new users
sec_createchan="100";           ## Minimum security level to create new channels
sec_chanop="100";               ## Teleconference Admin security level (System wide ChanOP)
sec_sysop="500";                ## Level to become a sysop
defchannel="MAIN";              ## Default Teleconference Channel
deftheme="photon";              ## Default User selected skin
totalnodes="99";                ## Support this many nodes.
rows="24";                      ## Number of rows before prompting to continue / quit
buffer="255";                   ## Chat line buffer size (255 characters recommended)
idledisconnect="900";           ## Idle time (in seconds) before being disconnected
facility="daemon.notice";       ## Log facility for syslog messages
start_in_teleconf="1";          ## Start in teleconference (1) or menu system (0)
slackintegration="0";           ## Send notifications to a Slack channel
slackerrors="0";                ## Sends error messages to your slack channel
slackwarnings="0";              ## Sends warning messages to your slack channel
slackuser="Photon BBS";         ## Send notifications from this user
slackchannel="";                ## Send notifications to this channel
slackemoji="";                  ## Use this emoji for notifications
slackapipath="";                ## This is the Slack API token for your webhook
